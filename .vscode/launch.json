{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug App",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/app/app.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true,
      "runtimeExecutable": "nodemon",
      "runtimeArgs": ["--inspect"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/app/app.js",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}